generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Song {
  id            String     @id @default(uuid())
  name          String
  audio_src     String?
  cover_art_src String?
  created_at    DateTime   @default(now())
  updated_at    DateTime   @updatedAt
  artistId      String?
  artist        Artist?    @relation(fields: [artistId], references: [id])
  genre         Genre[]    @relation("GenreToSong")
  playlists     Playlist[] @relation("PlaylistToSong")
}

model Artist {
  id         String   @id @default(uuid())
  name       String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  songs      Song[]
}

model Playlist {
  id          String   @id @default(uuid())
  name        String
  description String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  songs       Song[]   @relation("PlaylistToSong")
}

model Genre {
  id         String   @id @default(uuid())
  name       String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  Song       Song[]   @relation("GenreToSong")
}
